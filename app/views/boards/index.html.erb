<p style="color: green"><%= notice %></p>

<% content_for :title, "Boards" %>

<h1>Boards</h1>

<div id="boards">
  <% @boards.each do |board| %>
    <%= render board %>
    <p>
      <% if policy(board).edit? %>
        <%= link_to "Edit this board", edit_board_path(board) %>
      <% end %>
      
      <%= link_to "Show this board", board %>
    </p>
  <% end %>
</div>

<%= link_to "New board", new_board_path %>
